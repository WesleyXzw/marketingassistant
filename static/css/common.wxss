/* common style */
/* font */
.red {
  color: #df3d33 !important;
}
/* clear */
.clearfix {
  zoom: 1;
}
.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}
/* wx component */
.wx-switch-input {
  width: 40px !important;
  height: 20px !important;
}
/* false的样式 */
.wx-switch-input::before {
  width: 40px !important;
  height: 20px !important;
}
/* true的样式 */
.wx-switch-input::after {
  width: 18px !important;
  height: 18px !important;
}
/* defined style */
.common-card {
  border: 1px solid #BBBBBB;
  padding: 0 15px 5px;
  margin-bottom: 5px;
}
.common-card .common-card-title {
  font-size: 14px;
  color: #101010;
  font-weight: 600;
  line-height: 30px;
  margin-left: -5px;
  position: relative;
}
.common-card .common-card-title .common-card-title-right-option {
  position: absolute;
  right: 0;
  top: 0;
  line-height: 30px;
  font-size: 12px;
  color: #A29B9B;
  font-weight: 400;
}
.common-card .common-card-title .common-card-title-right-option.has-arrows {
  right: -3px;
}